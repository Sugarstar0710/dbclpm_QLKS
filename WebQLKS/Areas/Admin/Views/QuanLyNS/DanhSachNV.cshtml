@model IEnumerable<WebQLKS.Models.tbl_NhanVien>

@{
    ViewBag.Title = "DanhSachNV";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    table {
        border: 1px solid black;
        text-align: center;
    }

    td > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    td {
        width: 50px;
        height: 200px;
    }
</style>

<div class="container">
    <h2 class="text-center mt-2 fw-bold text-uppercase">Danh Sách Nhân Viên</h2>
    <table class="table">
        <tr>
            <th>
                Họ Tên
            </th>
            <th>
                Tài Khoản
            </th>
            <th>
                Mật Khẩu
            </th>
            <th>
                Email
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                Chức Vụ
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_ChucVu.TenChucVu)
                </td>
                <td>
                    <div class="d-flex">
                        @Html.ActionLink("Sửa thông tin", "EditNV", new { maNV = item.MaNV }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Xem thông tin", "ChiTietNV", new { maNV = item.MaNV }, new { @class = "btn btn-info text-light    " }) |
                        @Html.ActionLink("Xóa nhân viên", "XoaNV", new { maNV = item.MaNV }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    </table>
</div>