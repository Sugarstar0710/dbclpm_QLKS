@model WebQLKS.Models.tbl_HoaDon

@{
    ViewBag.Title = "ChinhSuaHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container w-75 card mt-3">
    <h2 class="fw-bold">Chỉnh sửa hóa đơn</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaHD)

            <div class="form-group">
                Ngày thanh toán
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayThanhToan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgayThanhToan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Tổng tiền
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã khách hàng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã phiếu thuê phòng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaPhieuThuePhong, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaPhieuThuePhong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã nhân viên
                <div class="col-md-10">
                    @{
                        WebQLKS.Models.tbl_NhanVien nvSession = new WebQLKS.Models.tbl_NhanVien();
                        nvSession = (WebQLKS.Models.tbl_NhanVien)Session["user"];
                        <input type="text" id="MaNv" name="MaNV" value="@nvSession.MaNV" disabled />
                    }
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Trạng thái
                <div class="col-md-10">
                    @Html.DropDownList("TrangThai", (SelectList)ViewBag.TT, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-2">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }
    <div class="mb-3">
        <button type="button" class="btn btn-default" onclick="window.history.back();">Quay lại</button>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
