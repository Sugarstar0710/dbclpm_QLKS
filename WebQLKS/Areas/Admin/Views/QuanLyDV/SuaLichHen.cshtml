@model WebQLKS.Models.tbl_DichVuDaDat

@{
    ViewBag.Title = "SuaLichHen";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="card container w-75">
    <h2>Chỉnh sửa lịch hẹn</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>SPA</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                Ngày:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySuDungDV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgaySuDungDV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã hóa đơn:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Trạng thái dịch vụ:
                <div class="col-md-10">
                    @Html.DropDownList("MaTrangThaiDV", (SelectList)ViewBag.status, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaTrangThaiDV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã nhân viên:
                <div class="col-md-10">
                    @{
                        WebQLKS.Models.tbl_NhanVien nvSession = new WebQLKS.Models.tbl_NhanVien();
                        nvSession = (WebQLKS.Models.tbl_NhanVien)Session["user"];
                        <input type="text" id="MaNv" name="MaNV" value="@nvSession.MaNV" disabled />
                    }  
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã khách hàng:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Mã dịch vụ:
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaDV, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaDV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                </div>
                <div>
                    <button type="button" class="btn btn-de" onclick="history.back();">Quay lại</button>
                </div>
            </div>
        </div>
    }
</div>