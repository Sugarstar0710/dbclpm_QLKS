@model WebQLKS.Models.tbl_LoaiPhong

@{
    ViewBag.Title = "ChiTietLoaiPhong";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    .container {
        width: 50%;
    }

    .dd {
        width: 100%;
    }

    dd > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>
@{
    var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
    DateTime a = DateTime.Now.AddDays(3);
}
    <div class="container card">
        <h2>Chi Tiết Loại Phòng</h2>

        <div>
            <h4>Loại Phòng</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Loại Phòng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenLoaiPhong)
                </dd>

                <dt>
                    Đơn Giá
                </dt>

                <dd>
                    @String.Format(info, "{0:0,0}", Model.DonGia) VND
                </dd>

                <dt>
                    Mô Tả
                </dt>

                <dd class="card-img">
                    @Html.DisplayFor(model => model.MoTa)
                </dd>

                <dt>
                    Hình Ảnh
                </dt>

                <dd>
                    <img src="~/Content/Home/Image/@Model.img" alt="Alternate Text" />
                </dd>

            </dl>
        </div>
        <p class="d-flex flex-column">
            @Html.ActionLink("Chỉnh Sửa", "ChinhSuaLoaiPhong", new { maLoaiPhong = Model.MaLoaiPhong }, new { @class = "btn btn-success" })

            <div>
                <button type="button" class="btn btn-default" onclick="window.history.back();">Quay lại</button>
            </div>
        </p>
    </div>