@model WebQLKS.Models.tbl_Phong

@{
    ViewBag.Title = "ChiTietPhong";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    dd > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    dd{
        width:200px;
    }
    .detail-room{
        width:50%;

    }
</style>
<div class="detail-room container card">
    <h2>Chi Tiết Phòng</h2>

    <div>
        <h4>Phòng</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Số Phòng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoPhong)
            </dd>

            <dt>
                Hình Ảnh
            </dt>

            <dd class="card-img">
                @{
                    if (Model.HinhAnh != null)
                    {
                        <img src="~/Content/Room/img/@Model.HinhAnh" />
                    }
                    else
                    {
                        <img src="~/Content/Home/Image/empty.jpg" />
                    }
                }
            </dd>

            <dt>
                Loại Phòng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_LoaiPhong.TenLoaiPhong)
            </dd>

            <dt>
               Trạng Thái
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_TrangThaiPhong.TenTrangThai)
            </dd>

        </dl>
    </div>
    <p class="d-flex flex-column">
        @Html.ActionLink("Edit", "ChinhSuaPhong", new { maPhong = Model.MaPhong }, new { @class = "btn btn-success" })

        <div>
            <button type="button" class="btn btn-default" onclick="window.history.back();">Quay lại</button>
        </div>
    </p>
</div>
