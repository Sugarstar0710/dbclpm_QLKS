@model WebQLKS.Models.tbl_DichVuDaDat

@{
    ViewBag.Title = "ChiTietLichDon";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container card w-50 mt-3">
    <h2>Chi Tiết Lịch Dọn</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Thời gian:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgaySuDungDV)
            </dd>

            <dt>
                Tên dịch vụ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_DichVu.TenDV)
            </dd>

            <dt>
                Trạng thái:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_TrangThaiDichVu.TenTrangThai)
            </dd>

            <dt>
                Mã khách hàng:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_HoaDon.MaKH)
            </dd>

            <dt>
                Người sử dụng dịch vụ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tbl_KhachHang.HoTen)
            </dd>

            <dt>
                Người thực hiện dịch vụ:
            </dt>

            <dd>
                @{
                    if (Model.MaNV == null)
                    {
                        <div>Chưa xác nhận</div>
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.tbl_NhanVien.HoTen)

                    }
                }
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Xác nhận", "XacNhanLichDonDep", new { id = Model.ID }, new { @class = "btn btn-success" })
    </p>
    <div>
        <button type="button" class="btn btn-de" onclick="history.back();">Quay lại</button>
    </div>
</div>