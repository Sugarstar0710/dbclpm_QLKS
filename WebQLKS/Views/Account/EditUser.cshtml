    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <button class="btn btn-primary w-100 py-2" type="submit" style="margin-top:10px" value="Save">Lưu thông tin</button>
        </div>
    </div>
</div>
        }

    <div class="m-3">
        @Html.ActionLink("Trở về trang cá nhân", "UserInfor", null,new {@class="btn btn-secondary"})
    </div>
    </div>