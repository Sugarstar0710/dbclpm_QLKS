@model WebQLKS.Models.tbl_KhachHang

@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebQLKS.Models.tbl_KhachHang kh = ViewBag.khachhang;
    <meta charset="UTF-8">
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }
    .background {
        color: white;
        border: 1px solid black;
        min-height: 95vh;
        max-height:fit-content;
        background-image: url('/Content/Home/Image/image_bg.jpg');
        background-size: cover;
    }
    .edit-container {
        width: 20%;
        margin: 0 auto;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 10px;
    }

    .profile-header {
        text-align: center;
        margin-top:20px;
    }

    .profile-pic {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 20px;
    }

    .profile-details p {
        margin: 10px 0;
    }

    .profile-details strong {
        display: inline-block;
        width: 150px;
    }

    .picture {
        margin: auto;
    }
</style>
<div class="container-fluid background">
    <h2 class="profile-header">CHỈNH SỬA TRANG CÁ NHÂN</h2>

    @using (Html.BeginForm("EditUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="edit-container">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaKH)

    <div class="form-group">
        <div><label>Họ và tên</label></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="hidden" id="TaiKhoan" name="TaiKhoan" value="@Model.TaiKhoan" />

    <div class="form-group">
        <div><label>Mật khẩu</label></div>
