@model IEnumerable<WebQLKS.Models.tbl_Phong>

@{
    ViewBag.Title = "Danh Sách Phòng Trống";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    td {
        width: 20%;
        text-align: center;
    }

    .canGiua {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div class="container mt-3 card">
    <h2 class="text-center mt-3">Danh Sách Phòng Trống</h2>

    <table class="table">
        <tr class="text-center">
            <th>
                Phòng số
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Loại Phòng
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="mt-3">
                <td style="width:20%;height:100px;">
                    <div class="canGiua h-100 text-center">@Html.DisplayFor(modelItem => item.SoPhong)</div>
                </td>
                <td style="width:20%">
                    @{
                        if (item.HinhAnh != null)
                        {
                            <img src="~/Content/Room/img/@item.HinhAnh" />
                        }
                        else
                        {
                            <img src="~/Content/Home/Image/empty.jpg" />
                        }
                    }
                </td>
                <td style="width:20%;height:100px;">
                    <div class="canGiua h-100 text-center">@Html.DisplayFor(modelItem => item.tbl_LoaiPhong.TenLoaiPhong)</div>
                </td>
                <td style="width:20%;height:100px;">
                    <div class="canGiua h-100 text-center">Trống</div>
                </td>
                <td style="width:20%;height:100px;">
                    <div class="canGiua h-100 text-center">
                        @Html.ActionLink("Đặt Phòng", "DatPhong", new { maPhong = item.MaPhong }, new { @class = "btn btn-success" })
                    </div>
                </td>
            </tr>
        }

    </table>
</div>
